<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_margin="@dimen/dp_15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/join_img"
        android:src="@color/cardview_shadow_start_color"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"/>

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="24dp"
        android:text="价格："
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/join__brief"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="52dp"
        android:text="价格"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/join_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="336dp"
        android:layout_marginTop="8dp"
        android:text="×"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <LinearLayout
        android:orientation="horizontal"
      android:layout_marginBottom="@dimen/dp_20"
        android:paddingHorizontal="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/join_img"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="数量"/>
    <TextView
        android:id="@+id/join_jian"
        android:layout_width="@dimen/dp_30"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:background="@drawable/shap1"
        android:gravity="center"
        android:text="-"
        android:textSize="@dimen/dp_20"/>
    <TextView
        android:id="@+id/join_num"
        android:layout_width="@dimen/dp_30"
        android:layout_height="wrap_content"
        android:background="@drawable/stroke_red"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/red" />
    <TextView
        android:id="@+id/join_jia"
        android:layout_width="@dimen/dp_30"
        android:layout_height="wrap_content"
        android:background="@drawable/shap1"
        android:gravity="center"
        android:text="+"
        android:textSize="@dimen/dp_20"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>